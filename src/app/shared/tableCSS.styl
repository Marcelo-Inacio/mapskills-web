.table-thead
  background-color: cadetblue;
  color: #fff;

.table-top
  margin-top: 15px;

.txt-thead
  width: 75%;

.table-scroll
  position: absolute;
  width: 97%;

.tbody-scroll
  overflow-y: auto;
  position: absolute;
  height: 75vh;

.tr-scroll
  width: 100%;
  display: inline-table;
  table-layout: fixed;

td
th
  text-align: center;

.table
  > thead
    > tr
      > th
        padding: 0px 5px

.menu-chidren
  background-color: #f0f8ff;
  padding-left: 30px !important;

.ico-sidebar
  padding-right: 10px
  font-size: 1.2 em

.form-control
  border-radius: 2px;

.form-control[disabled]
  background-color: rgba(0, 0, 0, 0.12);

.border-bottom
  border-bottom: solid;
  border-bottom-color: #30a5ff;
  border-bottom-style: groove;

.th-scroll, .td-scroll
  min-width: 200px;

.check-ok
  text-align: center;
  color: #22a722;
  font-size: 20px;

.check-not-ok
  text-align: center;
  color: rgb(221,44,0);
  font-size: 20px;

.btn-success
  background-color: #22a722;
  border-color: #22a722;

.center-align
  display: flex;
  align-items: center;
