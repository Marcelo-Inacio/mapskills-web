      select.form-control(ng-if="reportCtrl.isAdmin"
                        , ng-model="reportCtrl.institutionSelected"
                        , ng-change="reportCtrl.getInstitutionCourses(reportCtrl.institutionSelected.id)"
                        , ng-options="institution.company for institution in reportCtrl.institutions track by institution.id")
        option(value="") --- Todos ---
      
      select.form-control(ng-if="!reportCtrl.isAdmin")
        option(value="") {{::reportCtrl.institutionSelected.company}}

      select.form-control(ng-model="reportCtrl.courseSelected", ng-disabled="!reportCtrl.institutionSelected"
                          , ng-options="course.name for course in reportCtrl.institutionSelected.courses track by course.code")
        option(value="") --- Todos ---
      
    .col-xs-12.col-md-3.col-lg-3.aligner-item
      .input-group
        span.input-group-addon De
        input.form-control(type="text", ng-model="reportCtrl.filter.startDate", ui-mask="9999/9")
        span.input-group-addon At√©
        input.form-control(type="text", ng-model="reportCtrl.filter.endDate", ui-mask="9999/9")
        
    .col-xs-12.col-md-3.col-lg-3.aligner-item.button-new
      label.btn.btn-primary.btn-md(ng-click="reportCtrl.search(true)")
        i.fa.fa-search.ico-sidebar
        | buscar
      label.btn.btn-primary.btn-md(ng-click="reportCtrl.download()")
        i.fa.fa-file-excel-o.ico-sidebar
        | download

  .row.main-area(lazy-load="reportCtrl.loadMoreStudents()")
    .col-sm-6.col-md-3(ng-repeat="student in reportCtrl.students track by $index")
      .thumbnail.card(style="min-height: 100%; height: unset;")
        .text
          h5(ng-bind="student.ra")
        .text.border-top-bottom(style="min-height: 61px")
          h5.max-text(ng-bind="student.name")
        div.space-between(style="padding: 5px;")
          label.btn.btn-info.btn-xs(ng-click="reportCtrl.studentResult(student)") resultado
