.screen-background
  background-repeat: no-repeat;
  background-position: center;
  background-color: rgb(250,250,250);

#tela
  @media(max-height:320px)
    min-height: 490px;
  position relative
  padding-right 2px
  padding-left 2px
  margin-right auto
  margin-left auto
  width 960px
  height 100%
  min-height 610px
  border 3px solid #9ecaed
  border-radius 5px
  box-shadow 0 0 3px #9ecaed
  transition-duration 2s

.textbox
  @media(max-height:320px)
    font-size 30px
  width 100%
  height 33%
  bottom 0
  position absolute
  border 2px solid #9ecaed
  border-radius 5px
  margin -2px
  background-color rgba(0, 0, 0, 0.8)
  color #FFFFFF
  padding 5px 25px 5px 25px
  font-size 17px
  box-shadow 0 0 3px #9ecaed

.info
  position absolute
  background-color rgba(0, 40, 107, 0.6)
  right 5px
  top 5px
  height 60px
  width 60px
  border 2px solid #9ecaed
  border-radius 30px
  text-align center
  font-size 18px
  padding 14px
  color #9ecaed
  font-weight bold
  cursor pointer
  &:hover
    background-color rgba(255, 255, 255, 1)
    transition-duration 0.3s
    color #000
    font-weight bold
    box-shadow 0 0 3px #9ecaed

#infobox
  position absolute
  background-color rgba(0, 40, 107, 0.6)
  right 25px
  top 25px
  text-align left
  border 2px solid #9ecaed
  border-radius 5px
  text-align center
  font-size 14px
  color #9ecaed
  font-weight bold
  cursor pointer
  overflow hidden

.whotalks
  color #9ecaed
  margin-bottom 5px
  font-size 24px

#options
  @media(max-height:320px)
    right: 0
    top: 5%
    left: initial
    width: 70%
  width 550px
  left 70px
  top 100px
  position absolute
  color #FFFFFF
  font-size 18px

.alternative
  @media(max-height:320px)
    font-size 30px
  border 2px solid #9ecaed
  border-radius 5px
  margin-bottom 15px
  background-color rgba(0, 40, 107, 0.95)
  color #FFF
  font-weight bold
  padding 5px 25px 5px 25px
  font-size 17px
  box-shadow 0 0 3px #9ecaed
  cursor pointer
  &:hover
    background-color rgba(0, 0, 0, 1)
    color #fff

.option-close
  height 10px
  width 10px

.option-open
  height 350px

.activated
  visibility visible
  width 950px
  height 640px
  position absolute
  cursor pointer

.inactive
  visibility hidden

.infoclose
  transition height 0.3s, width 0.3s, linear 0.1s
  text-align left
  height 0px
  width 0px
  visibility hidden
  overflow hidden

.infoopen
  visibility visible
  transition height 0.3s, width 0.3s, linear 0.1s
  text-align left
  height 400px
  width 180px
  overflow hidden
  padding 14px

#ranking, #nome, #recurso
  margin 10px
  color #FFF

#prosseguir
  position absolute
  width 950px
  height 100%
  cursor pointer

.background
  background-color #222222
  padding-top 50px
  color #5f6468
  display: block;
  position: absolute;
  top: 0;
  padding: 50px 0 0 0;
  height: 100%;
  width: 100%;
  text-shadow: none;
  background-attachment: fixed;
  @media(max-height:320px)
    height: initial;

.full-height
  overflow-y: auto
  height: 100%

.border-report
  border-top: 2px solid #dbdddf;
  border-top-width: 2px;
  border-top-left-radius: 2px;
  border-left: 2px solid #dbdddf;
