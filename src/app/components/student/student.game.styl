#tela
  position relative
  padding-right 2px
  padding-left 2px
  margin-right auto
  margin-left auto
  width 960px
  heigth 640px
  min-height 640px
  border 3px solid #9ecaed
  border-radius 5px
  box-shadow 0 0 3px #9ecaed
  transition-duration 2s

#tela
  .textbox
    width 945px
    height 200px
    bottom 0
    position absolute
    border 2px solid #9ecaed
    border-radius 5px
    margin 2px
    background-color rgba(0, 0, 0, 0.8)
    color #FFFFFF
    padding 5px 25px 5px 25px
    font-size 17px
    box-shadow 0 0 3px #9ecaed

.info
  position absolute
  background-color rgba(0, 40, 107, 0.6)
  right 5px
  top 5px
  height 60px
  width 60px
  border 2px solid #9ecaed
  border-radius 30px
  text-align center
  font-size 18px
  padding 14px
  color #9ecaed
  font-weight bold
  cursor pointer
  &:hover
    background-color rgba(255, 255, 255, 1)
    transition-duration 0.3s
    color #000
    font-weight bold
    box-shadow 0 0 3px #9ecaed

#infobox
  position absolute
  background-color rgba(0, 40, 107, 0.6)
  right 25px
  top 25px
  text-align left
  border 2px solid #9ecaed
  border-radius 5px
  text-align center
  font-size 14px
  color #9ecaed
  font-weight bold
  cursor pointer
  overflow hidden

.whotalks
  color #9ecaed
  margin-bottom 5px
  font-size 24px

#options
  width 550px
  left 70px
  top 100px
  position absolute
  color #FFFFFF
  font-size 18px

.op
  border 2px solid #9ecaed
  border-radius 5px
  margin-bottom 15px
  background-color rgba(0, 40, 107, 0.8)
  color #FFF
  font-weight bold
  padding 5px 25px 5px 25px
  font-size 17px
  box-shadow 0 0 3px #9ecaed
  cursor pointer
  &:hover
    background-color rgba(0, 0, 0, 1)
    color #fff

.optionclose
  height 10px
  width 10px

.optionopen
  height 350px

.active
  visibility visible
  width 950px
  height 640px
  position absolute
  cursor pointer

.inactive
  visibility hidden

.infoclose
  transition height 0.3s, width 0.3s, linear 0.1s
  text-align left
  height 0px
  width 0px
  visibility hidden
  overflow hidden

.infoopen
  visibility visible
  transition height 0.3s, width 0.3s, linear 0.1s
  text-align left
  height 400px
  width 180px
  overflow hidden
  padding 14px

#ranking, #nome, #recurso
  margin 10px
  color #FFF

#prosseguir
  position absolute
  width 950px
  height 640px
  cursor pointer

#radarChart
  margin-left: auto
  margin-right: auto
