section
  .row.center-align
    .col-md-9
      .col-md-6.center-align
        .col-md-2
          label De
        .col-md-10
          input.form-control(type="month", ng-model="mentorDashCtrl.filter.startDate")
      .col-md-6.center-align
        .col-md-2
          label At√©
        .col-md-10
          input.form-control(type="month", ng-model="mentorDashCtrl.filter.endDate")
    .col-md-3
      label#btn-todo.btn.btn-primary.btn-md.botton-new(ng-click="mentorDashCtrl.search()")
        i.fa.fa-search.ico-sidebar
        | pesquisar
  .row
    .col-lg-8
      .row
        .col-lg-3.col-md-4.col-xs-6(ng-repeat="course in mentorDashCtrl.courses")
          .panel.panel-default
            .panel-body.panel-radar
              canvas#meu-chart.chart.chart-pie(width="400", height="400", chart-data="course.values", chart-labels="mentorDashCtrl.labels", chart-options="mentorDashCtrl.options")
            .panel-footer(style="text-align: center") {{course.code}}
    .col-lg-4
      .panel.panel-default
        .panel-heading Legenda
        .panel-body.panel-radar
          h5(ng-repeat="course in mentorDashCtrl.courses")
            p {{course.code}} - {{course.name}}
