section
  .row
    .col-xs-12
      button.btn.btn-primary(ng-click="crsCtrl.openCourseModal()") novo
  #main-area.row.main-area
    .col-xs-12.col-sm-6.col-md-4.col-lg-3(ng-repeat="course in crsCtrl.allCourses track by $index")
      .thumbnail.card
        img(ng-src="{{crsCtrl.image}}", onerror="this.src='assets/images/image_unavailable.png'", alt="{{crsCtrl.image}}", style="max-height: 218px")
        div  
          .text.align-center.border-top-bottom(style="height: 63px; margin-top: 0;")
            h5.max-text(ng-bind="course.name")
          div(style="padding: 5px;")
            a.btn.btn-info.btn-xs(ng-click="crsCtrl.openCourseModal(course)") editar
