section
  label#btn-todo.btn.btn-success.btn-md.botton-new(ng-click="crsCtrl.openCourseModal()") novo
  table.table.table-hover.table-striped
    thead
      tr.table-thead
        th Codigo
        th Nome
        th Período
        th Ação
    tbody
      tr(ng-repeat="course in crsCtrl.allCourses track by course.id")
        td {{course.code}}
        td {{course.name}}
        td {{course.period}}
        td
          label#btn-todo.btn.btn-info.btn-xs(ng-click="crsCtrl.openCourseModal(course)") editar
