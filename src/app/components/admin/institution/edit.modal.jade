.section
  .modal-header
  .modal-body
    .form-group.row
      .col-md-12
        label Código:
        input.form-control(type='text', ng-model="modalCtrl.institutionDetails.code")
    .form-group.row
      .col-md-12
        label CNPJ:
        input.form-control(type='text', ng-model="modalCtrl.institutionDetails.cnpj")
    .form-group.row
      .col-md-12
        label Razão Social:
        input.form-control(type='text', ng-model="modalCtrl.institutionDetails.company")
    .form-group.row
      .col-md-12
        label Cidade:
        input.form-control(type='text', ng-model="modalCtrl.institutionDetails.city")
    .form-group(ng-repeat="mentor in modalCtrl.institutionDetails.mentors track by mentor.id")
      .row
        .col-md-12
          label Mentor - Nome:
          input.form-control(type='text', ng-model="mentor.name")
      .row
        .col-md-12
          label Mentor - E-mail:
          input.form-control(type='text', ng-model="mentor.username")
      .row
        .col-md-12
          label Mentor - Senha:
          md-checkbox.md-primary(md-no-ink='', aria-label='Checkbox No Ink', ng-model='modalCtrl.checkboxPassword')
            | mostrar senha
          input.form-control(type='{{modalCtrl.showPassword[modalCtrl.checkboxPassword]}}', ng-model="mentor.password", placeholder="senha")
  .modal-footer
    button#btn-todo.btn.btn-primary.btn-md(ng-click="modalCtrl.saveInstitution(modalCtrl.institutionDetails)") salvar
    button#btn-todo.btn.btn-default.btn-md(ng-click="modalCtrl.closeModal()") cancelar
