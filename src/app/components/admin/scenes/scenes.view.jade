section
  .row
    .col-xs-12.space-between
      i.fa.fa-info-circle.ico-large(uib-popover="{{'SCENE_MESSAGE' | translate}}", popover-placement="bottom-left", popover-trigger="'mouseenter'")
      .btn-group
        button.btn.btn-primary(ng-click="scnCtrl.openSceneModal()") novo
        button.btn.btn-primary(ng-click="scnCtrl.updateIndexScenes(scnCtrl.allScenes)") salvar alterações
  #main-area.row.main-area(ui-sortable ng-model="scnCtrl.allScenes")
    .col-sm-6.col-md-4.col-lg-3(ng-repeat="scene in scnCtrl.allScenes track by scene.id")
      .thumbnail.card
        img(ng-src="{{scene.background.filename}}", onerror="this.src='assets/images/image_unavailable.png'", alt="{{scene.background.filename}}")
        .text
          p.text-ellipsis(ng-bind="scene.text")
        div(style="padding: 5px;")
          div.space-between.align-center.border-top-bottom
            i Questão
            div(ng-show="!scene.question")
              a.btn.btn-primary.btn-xs(ng-click="scnCtrl.openQuestionModal(scene)") adicionar
            div(ng-show="scene.question")
              a.btn.btn-primary.btn-xs(ng-click="scnCtrl.openQuestionModal(scene)") editar
              a.btn.btn-danger.btn-xs(style="margin-left: 5px;", ng-click="scnCtrl.deleteQuestion(scene.id)") excluir
          div.space-between
            a.btn.btn-primary.btn-xs(ng-click="scnCtrl.openSceneModal(scene)") editar
            a.btn.btn-danger.btn-xs(ng-click="scnCtrl.deleteScene(scene.id)") excluir
