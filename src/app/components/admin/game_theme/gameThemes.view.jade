section
  label#btn-todo.btn.btn-success.btn-md.botton-new(ng-click="gthCtrl.openModal()") novo
  table.table.table-hover
    thead
      tr.table-thead
        th Id
        th Nome
        th Cenas
        th Ativo
    tbody
      tr(ng-repeat="theme in gthCtrl.allThemes track by theme.id")
        td(style="text-align: center") {{::theme.id}}
        td {{::theme.name}}
        td
          label#btn-todo.btn.btn-info.btn-xs(ui-sref="admin.scenes({themeId: theme.id})") editar
        td
          md-switch.md-primary.botton-switch(ng-model='theme.active', aria-label="Status" ng-change="gthCtrl.updateStatus(theme.id, theme.active)")
